{
  "name": "Taper",
  "action": {
    "default_title": "Default Title",
    "default_popup": "html/popup.html"
  },
  "manifest_version": 3,
  "version": "1.0.0",
  "description": "Export your Reddit Avatar",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "scripting"
  ],
  "background": {
    "service_worker": "main.js"
  },
  "icons": {
    "32": "img/logo_32.png",
    "72": "img/logo_72.png",
    "128": "img/logo_128.png"
  }
}
